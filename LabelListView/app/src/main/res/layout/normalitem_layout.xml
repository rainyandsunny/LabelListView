<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/friendLividerHeight">
    <ImageView
        android:id="@+id/ivicon"
        android:layout_marginLeft="@dimen/nameMarginLeft"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/iconMarginTopAndBottom"
        android:layout_marginBottom="@dimen/iconMarginTopAndBottom"
        android:layout_width="@dimen/iconSize"
        android:layout_height="@dimen/iconSize"/>
    <TextView
        android:id="@+id/tvname"
        android:textAlignment="center"
        android:layout_marginLeft="@dimen/nameMarginLeft"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/FriendListFontStyle"/>
</LinearLayout>